<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/item_curso_cv">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_curso_eap"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="SS"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/texto_muy_chico"
            android:textColor="@color/colorPrimary"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <TextView
                android:id="@+id/item_curso_nombre1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(2009) Algoritmica I"
                android:textSize="@dimen/texto_muy_chico"
                android:gravity="center"/>
            <TextView
                android:id="@+id/item_curso_nombre2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(2014) Programación I"
                android:textSize="@dimen/texto_muy_chico"
                android:gravity="center"/>

        </LinearLayout>
        <TextView
            android:id="@+id/item_curso_coordinador"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:paddingLeft="5dp"
            android:layout_height="match_parent"
            android:text="ACUÑA MONTAÑEZ, WALTER"
            android:textSize="@dimen/texto_muy_chico"
            android:gravity="center"/>

    </LinearLayout>
</android.support.v7.widget.CardView>