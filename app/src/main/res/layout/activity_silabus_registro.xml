<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SilabusRegistrarActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/registro_silabus_btnVolver"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/btnback"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTRO DE SILLABUS"
                android:gravity="center"
                android:textColor="@color/colorIcons"
                android:textStyle="bold"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/registro_silabus_nombre_curso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE CURSO"
                android:textColor="@color/colorIcons"
                android:gravity="center"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/registro_silabus_btnSalir"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:src="@drawable/btnsalir"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin5dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/registro_silabus_btnAnterior"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="18dp"
                android:clickable="true"
                android:src="@drawable/btnvolver"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/registro_silabus_txtTituloFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="UNIDADES DIDÃCTICAS"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top">
                <TextView
                    android:id="@+id/txtDot1"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center|top"
                    android:text="o"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtDot2"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="o"
                    android:gravity="center|top"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/txtDot3"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center|top"
                    android:text="o"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/registro_silabus_btnSiguiente"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="18dp"
                android:rotation="180"
                android:tint="@color/colorPrimary"
                android:src="@drawable/btnvolver"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"/>
    <LinearLayout
        android:id="@+id/layout_fragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>