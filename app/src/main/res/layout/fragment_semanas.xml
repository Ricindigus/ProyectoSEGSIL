<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.SemanasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_material"
        android:background="@drawable/btn_agregar">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:id="@+id/item_unidad_eap"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="NÂ°"
                    android:gravity="center"
                    android:textSize="@dimen/texto_muy_chico"
                    android:textColor="@color/colorIcons"/>
                <TextView
                    android:id="@+id/item_unidad_nombre1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:textColor="@color/colorIcons"
                    android:text="NOMBRE DE UNIDAD"
                    android:textSize="@dimen/texto_muy_chico"/>
                <TextView
                    android:id="@+id/item_unidad_coordinador"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"
                    android:layout_height="match_parent"
                    android:text="SEMANAS"
                    android:textColor="@color/colorIcons"
                    android:textSize="@dimen/texto_muy_chico"
                    android:gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/semanas_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>