<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.UnidadesFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_material">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin5dp"
            android:layout_marginLeft="@dimen/margin5dp"
            app:cardBackgroundColor="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INFORMACION"
                android:gravity="center"
                android:textColor="@color/colorIcons"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/unidades_fragment_txtNombreCurso1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="nombreplan1"/>
                    <TextView
                        android:id="@+id/unidades_fragment_txtNombreCurso2"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="nombreplan1"/>
                    <TextView
                        android:id="@+id/unidades_fragment_txtCoordinador"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coordinador:"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/btn_agregar">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5dp"
                android:layout_marginRight="@dimen/margin5dp"
                app:cardBackgroundColor="@color/colorPrimary">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/item_unidad_eap"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="NÂ°"
                        android:gravity="center"
                        android:textSize="@dimen/texto_muy_chico"
                        android:textColor="@color/colorIcons"/>
                    <TextView
                        android:id="@+id/item_unidad_nombre1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:textColor="@color/colorIcons"
                        android:text="NOMBRE DE UNIDAD"
                        android:textSize="@dimen/texto_muy_chico"/>
                    <TextView
                        android:id="@+id/item_unidad_coordinador"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingLeft="5dp"
                        android:layout_height="match_parent"
                        android:text="SEMANAS"
                        android:textColor="@color/colorIcons"
                        android:textSize="@dimen/texto_muy_chico"
                        android:gravity="center"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin5dp"
                android:layout_marginRight="@dimen/margin5dp"
                android:layout_marginBottom="@dimen/margin5dp"
                android:layout_marginTop="1dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"/>
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/btn_agregar"
                        android:id="@+id/unidades_fragment_fab"
                        android:layout_margin="10dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>