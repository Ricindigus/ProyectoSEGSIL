<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".administrador.AdminActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_material">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/icono_administrador"
                android:tint="@color/colorIcons"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/texto_medio"
                android:text="ADMINISTRADOR"
                android:textColor="@color/colorIcons"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_margin="@dimen/margin_material">
            <TextView
                android:id="@+id/admin_texto_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="sdfsd"
                android:textColor="@color/colorIcons"/>
            <Button
                android:id="@+id/admin_btnGestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gestión de usuarios"
                android:theme="@style/RaisedButtonDark"
                />
            <Button
                android:id="@+id/admin_btnCargaAcademica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="carga académica"
                android:theme="@style/RaisedButtonDark"
                />
            <Button
                android:id="@+id/admin_btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cerrar sesión"
                android:theme="@style/RaisedButtonDark"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>